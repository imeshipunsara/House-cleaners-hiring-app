<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerSignUpActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="410dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:paddingRight="30dp"
        android:text="Create Account"
        android:textAlignment="textEnd"
        android:textColor="@color/lavender"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="404dp"
        android:layout_height="28dp"
        android:layout_marginTop="5dp"
        android:paddingRight="22dp"
        android:text="Join EasyCleano by filling in your details below."
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/edtCustomer_firstName"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/costom_edittext2"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/edtCustomer_lastName"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/costom_edittext2"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCustomer_firstName" />

    <EditText
        android:id="@+id/edtCustomer_email"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/costom_edittext2"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCustomer_lastName" />

    <EditText
        android:id="@+id/edtCustomer_phoneNumber"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/costom_edittext2"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCustomer_email" />

    <EditText
        android:id="@+id/edtCustomer_homeAddress"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/costom_edittext2"
        android:drawableLeft="@drawable/baseline_home_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Home Address"
        android:inputType="textPostalAddress"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCustomer_phoneNumber" />

    <EditText
        android:id="@+id/edtCustomer_Password"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/costom_edittext2"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCustomer_homeAddress" />

    <EditText
        android:id="@+id/edtCustomer_confirmPassword"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/costom_edittext2"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:padding="8dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCustomer_Password" />

    <Button
        android:id="@+id/btnCustomer_SignUp"
        android:layout_width="355dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/lavender"
        android:text="Sign Up"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCustomer_confirmPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>