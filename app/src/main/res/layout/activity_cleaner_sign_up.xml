<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CleanerSignUpActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="Create an Account"
        android:textAlignment="textEnd"
        android:textColor="@color/lavender"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="343dp"
        android:layout_height="26dp"
        android:layout_marginTop="4dp"
        android:text="Join EasyCleano and start offering your services"
        android:textAlignment="textEnd"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.779"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="623dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edtCL_firstname"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/costom_edittext2"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="First Name"
                android:inputType="text"
                android:padding="8dp" />

            <EditText
                android:id="@+id/edtCL_lastName"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/costom_edittext2"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="text"
                android:padding="8dp" />

            <EditText
                android:id="@+id/edtClAge"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/costom_edittext2"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Age"
                android:inputType="text"
                android:padding="8dp" />

            <EditText
                android:id="@+id/edtCL_Email"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/costom_edittext2"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edtCL_PhoneNumber"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/costom_edittext2"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:padding="8dp" />

            <EditText
                android:id="@+id/edtCL_Experience"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/costom_edittext2"
                android:drawableLeft="@drawable/baseline_business_center_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Work experience"
                android:inputType="text"
                android:padding="8dp" />

            <EditText
                android:id="@+id/edtCL_Password"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/costom_edittext2"
                android:drawableLeft="@drawable/baseline_password_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp" />

            <EditText
                android:id="@+id/edtCL_ConfirmPW"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/costom_edittext2"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnCL_SIgnUP"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/lavender"
                android:text="Sign Up"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>